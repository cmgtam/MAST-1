# Test file
$MAST
program VASP
system_name GaAs_defects
$end

$structure
posfile POSCAR.ga4as4
$end

$defects
threshold 1e-4

vacancy 0.0 0.0 0.0 Ga charge=-3,0

begin
substitution 0.25 0.25 0.25 Bi
vacancy 0.0 0.0 0.0 Ga
end

antisite 0.0 0.0 0.0 As charge=0,2
$end

$recipe
recipe_file recipe_defects.txt 
#recipe_file debug.txt
$end

$ingredients
begin ingredients_global
mast_kpoints 2x2x2
mast_xc PBE
mast_ppn 1
mast_queue default
mast_exec //share/apps/vasp5.2_CNEB > vasp.out
mast_pp_setup Ga=Ga_d Bi=Bi_d
ispin 2
lwave False
lcharg False
encut 313
end

#begin static
#end

begin optimize
encut 313
ibrion 2
nsw 100
end

#begin inducedefect
#end
$end

$chemical_potentials
begin Ga rich
Ga -3.6080
As -6.0383
Bi -4.5650
end

begin As rich
Ga -4.2543
As -5.3920
Bi -4.5650
end
$end

