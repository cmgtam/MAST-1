# Phonon test file
$mast
program VASP
system_name phonontest
$end

$structure
coord_type fractional

begin elementmap
X1 Ga
X2 As
end

begin coordinates
X1 0.000000 0.000000 0.000000
X1 0.500000 0.500000 0.000000
X1 0.000000 0.500000 0.500000
X1 0.500000 0.000000 0.500000
X2 0.250000 0.250000 0.250000
X2 0.750000 0.750000 0.250000
X2 0.250000 0.750000 0.750000
X2 0.750000 0.250000 0.750000
end

begin lattice
6.0 0.0 0.0
0.0 6.0 0.0
0.0 0.0 6.0
end
$end

$defects
coord_type fractional
begin vac1
    vacancy 0.0 0.0 0.0 Ga
end
$end

$ingredients
begin ingredients_global
mast_kpoints 1x1x1 G
mast_xc pbe
mast_exec //share/apps/vasp5.2_cneb
mast_walltime 4
mast_ppn 1
encut 300
ibrion 2
nsw 191
end

begin optimize
end

begin optimizedefect
end

begin phononsingle
ibrion 5
nfree 2
potim 0.01
end

begin inducedefect
end

begin phonparse
lfree .True.
temperature 1173
nd 3
qa 11
qb 11
qc 11
lsuper .False.
mast_exec $MAST_INSTALL_PATH/phon_nosymm
end

$end

$recipe
recipe_file ph_test.txt
$end

$chemical_potentials
begin As rich
Ga 4.5
As 3.5
end

begin Ga rich
Ga 3.5
As 4.5
end
$end

$phonon
begin vac1
phonon_center_site 0.5 0.5 0
phonon_center_radius 2
end
$end
